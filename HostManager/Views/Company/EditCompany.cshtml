@model Company

@{
    ViewData["Title"] = "კომპანიის რედაქტირება";
}

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h4 class="text-center font-weight-light">კომპანიის რედაქტირება</h4></div>
                        <div class="card-body">
                            <form asp-action="UpdateCompany" method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Name" class="small mb-1">კომპანიის სახელი</label>
                                        <input asp-for="Name" class="form-control py-3" type="text" placeholder="ჩაწერე სახელი" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Email" class="small mb-1">ელ-ფოსტა</label>
                                        <input asp-for="Email" class="form-control py-3" type="text" placeholder="ჩაწერე ელ-ფოსტა" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Phone" class="small mb-1">ტელეფონი</label>
                                        <input asp-for="Phone" class="form-control py-3" type="text" placeholder="ჩაწერე ტელეფონი" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Code" class="small mb-1">რაღაც კოდი</label>
                                        <input asp-for="Code" class="form-control py-3" type="text" placeholder="ჩაწერე კოდი" />
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="ContactPerson" class="small mb-1">საკონტაქტო პირი</label>
                                        <input asp-for="ContactPerson" class="form-control py-3" type="text" placeholder="ჩაწერე ნომერი" />
                                        <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group mt-4 mb-0">
                                    <input type="submit" class="btn btn-primary btn-block" value="კომპანიის რედაქტირება" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
